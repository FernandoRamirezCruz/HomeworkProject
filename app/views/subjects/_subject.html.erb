<div id="<%= dom_id subject %>">
  <p>
    <strong>Name:</strong>
    <%= subject.name %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= subject.color %>
  </p>

  <p>
    <strong>Teacher:</strong>
    <%= subject.teacher %>
  </p>

  <p>
    <strong>Schedule:</strong>
    <%= subject.schedule %>
  </p>

  <p><strong>Nombre:</strong> <%= @subject.name %></p>
  <p><strong>Horario:</strong></p>

  <ul>
    <% @subject.schedule.each do |day, hours| %>
      <li><strong><%= day %>:</strong> <%= hours.join(", ") %></li>
    <% end %>
  </ul>
  
</div>
